# IGN Scripts Frontend Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
VITE_API_BASE_URL=http://localhost:8000

# Neo4j Knowledge Graph Configuration
VITE_NEO4J_URI=bolt://localhost:7687
VITE_NEO4J_USER=neo4j
VITE_NEO4J_PASSWORD=your-neo4j-password
VITE_NEO4J_DATABASE=neo4j

# Authentication
VITE_AUTH_DOMAIN=your-auth-domain
VITE_AUTH_CLIENT_ID=your-client-id
VITE_AUTH_REDIRECT_URI=http://localhost:5173/callback

# Feature Flags
VITE_ENABLE_NEO4J=true
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_ANALYTICS=false

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# WebSocket Configuration (for real-time updates)
VITE_WS_URL=ws://localhost:8000/ws

# Application Metadata
VITE_APP_NAME="IGN Scripts"
VITE_APP_VERSION=1.0.0

# Performance Settings
VITE_CACHE_TTL=300000  # 5 minutes in milliseconds
VITE_MAX_RETRIES=3
VITE_REQUEST_TIMEOUT=30000  # 30 seconds

# External Services (if needed)
VITE_SENTRY_DSN=
VITE_ANALYTICS_ID=
